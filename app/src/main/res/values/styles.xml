<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--    Date Picker Modifications-->
    <style name="MyDatePicker" parent="android:Widget.Material.DatePicker" tools:targetApi="lollipop">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:calendarViewShown">true</item>
        <item name="android:headerBackground">@android:color/transparent</item>
    </style>

    <!--    Dialog theme for JumpToDateActivity-->
    <style name="Theme.UserDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!--    No ActionBar Theme-->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--    styling for Divider -->
    <style name="Divider">
        <item name="android:background">@color/colorAccent</item>
    </style>

</resources>
